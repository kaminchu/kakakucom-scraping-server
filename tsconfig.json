{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "target": "es2017",
      "sourceMap": true,
      "removeComments": true,
      "types" : ["node"],
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  